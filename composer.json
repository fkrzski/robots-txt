{
    "name": "fkrzski/robots-txt",
    "description": "A modern, fluent PHP package for managing robots.txt rules with type safety and great developer experience",
    "type": "library",
    "keywords": [
        "robots.txt",
        "crawler",
        "seo",
        "web-crawler",
        "robots",
        "php8"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "fkrzski",
            "email": "filip.krzyzanowski@protonmail.com",
            "role": "Developer",
            "homepage": "https://github.com/fkrzski"
        }
    ],
    "funding": [
        {
            "type": "github",
            "url": "https://github.com/sponsors/fkrzski"
        }
    ],
    "support": {
        "email": "filip.krzyzanowski@protonmail.com",
        "issues": "https://github.com/fkrzski/robots-txt/issues",
        "source": "https://github.com/fkrzski/robots-txt"
    },
    "require": {
        "php": "^8.3"
    },
    "require-dev": {
        "laravel/pint": "^v1.7",
        "pestphp/pest": "^4.0",
        "pestphp/pest-plugin-type-coverage": "^4.0",
        "phpstan/phpstan": "^2.0",
        "rector/rector": "^2.1.2"
    },
    "autoload": {
        "psr-4": {
            "Fkrzski\\RobotsTxt\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Fkrzski\\RobotsTxt\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "analyse": "phpstan",
        "lint": "pint",
        "refactor": "rector",
        "test:lint": "pint --test",
        "test:profanity": "pest --profanity --compact",
        "test:refactor": "rector --dry-run",
        "test:syntax": "find . -path ./vendor -prune -o -type f -name \\\"*.php\\\" -print | xargs -P 2 -n 1 php -l",
        "test:type-coverage": "pest --type-coverage --exactly=100 --compact",
        "test:unit": "pest --parallel --coverage --exactly=100",
        "test:unit:mutation": "pest --parallel --mutate --exactly=100",
        "test": [
            "@test:profanity",
            "@test:syntax",
            "@test:lint",
            "@test:refactor",
            "@analyse",
            "@test:type-coverage",
            "@test:unit:mutation"
        ],
        "code-quality": [
            "@lint",
            "@refactor"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}